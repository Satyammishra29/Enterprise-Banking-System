<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.banking.TransactionController"
      spacing="20" style="-fx-padding: 20;">
    <Label text="Transaction Management" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #343a40;"/>
    
    <HBox spacing="20" alignment="TOP_LEFT">
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" prefWidth="400">
            <Label text="New Transaction" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #007bff;"/>
            <GridPane hgap="10" vgap="10">
                <Label text="From Account:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="fromAccountField" promptText="e.g. SAV001" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200"/>
                
                <Label text="To Account:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="toAccountField" promptText="e.g. CUR001 (for transfers)" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200"/>
                
                <Label text="Amount:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="amountField" promptText="e.g. 500.00" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="200"/>
                
                <Label text="Transaction Type:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="transactionTypeBox" promptText="Select type" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="200"/>
                
                <Label text="Description:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <TextField fx:id="descriptionField" promptText="e.g. Monthly deposit" GridPane.rowIndex="4" GridPane.columnIndex="1" prefWidth="200"/>
                
                <Button text="Execute Transaction" fx:id="executeBtn" GridPane.rowIndex="5" GridPane.columnIndex="1" 
                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 35; -fx-background-radius: 5;"/>
            </GridPane>
        </VBox>
        
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" prefWidth="400">
            <Label text="Transaction History" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #ffc107;"/>
            <TableView fx:id="transactionsTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colTransactionId" text="ID" prefWidth="80"/>
                    <TableColumn fx:id="colFromAccount" text="From" prefWidth="100"/>
                    <TableColumn fx:id="colToAccount" text="To" prefWidth="100"/>
                    <TableColumn fx:id="colAmount" text="Amount" prefWidth="80"/>
                    <TableColumn fx:id="colType" text="Type" prefWidth="80"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="80"/>
                </columns>
            </TableView>
        </VBox>
    </HBox>
    
    <Label fx:id="statusLabel" text="" style="-fx-font-size: 14px; -fx-text-fill: #6c757d; -fx-alignment: CENTER;"/>
</VBox>
