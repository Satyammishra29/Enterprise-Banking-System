<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.dashboard.DashboardController"
            prefWidth="1200" prefHeight="800"
            style="-fx-background-color: #f8f9fa;">
    
    <!-- Left Sidebar -->
    <left>
        <VBox fx:id="sidebar" spacing="10" style="-fx-background-color: #343a40; -fx-padding: 20; -fx-pref-width: 250;">
            <!-- Logo and Title -->
            <Label text="🏦" style="-fx-font-size: 32px; -fx-text-fill: white; -fx-alignment: CENTER;"/>
            <Label text="Enterprise Banking" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white; -fx-alignment: CENTER;"/>
            <Label text="System" style="-fx-font-size: 14px; -fx-text-fill: #adb5bd; -fx-alignment: CENTER;"/>
            
            <Separator style="-fx-background-color: #495057;"/>
            
            <!-- User Info -->
            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #495057; -fx-background-radius: 5;">
                <Label fx:id="userInfoLabel" text="Welcome, User" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                <Label fx:id="roleLabel" text="Role: Guest" style="-fx-text-fill: #adb5bd; -fx-font-size: 12px;"/>
            </VBox>
            
            <Separator style="-fx-background-color: #495057;"/>
            
            <!-- Navigation Buttons -->
            <Button fx:id="dashboardBtn" text="📊 Dashboard" 
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-height: 40; -fx-background-radius: 5; -fx-alignment: CENTER_LEFT; -fx-padding: 0 15;"/>
            <Button fx:id="accountsBtn" text="👥 Accounts" 
                    style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-height: 40; -fx-background-radius: 5; -fx-alignment: CENTER_LEFT; -fx-padding: 0 15;"/>
            <Button fx:id="transactionsBtn" text="💳 Transactions" 
                    style="-fx-background-color: #ffc107; -fx-text-fill: #212529; -fx-font-size: 14px; -fx-pref-height: 40; -fx-background-radius: 5; -fx-alignment: CENTER_LEFT; -fx-padding: 0 15;"/>
            <Button fx:id="reportsBtn" text="📈 Reports" 
                    style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-height: 40; -fx-background-radius: 5; -fx-alignment: CENTER_LEFT; -fx-padding: 0 15;"/>
            <Button fx:id="settingsBtn" text="⚙️ Settings" 
                    style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-height: 40; -fx-background-radius: 5; -fx-alignment: CENTER_LEFT; -fx-padding: 0 15;"/>
            
            <Separator style="-fx-background-color: #495057;"/>
            
            <!-- Logout Button -->
            <Button fx:id="logoutBtn" text="🚪 Logout" 
                    style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-height: 40; -fx-background-radius: 5; -fx-alignment: CENTER_LEFT; -fx-padding: 0 15;"/>
        </VBox>
    </left>
    
    <!-- Top Header -->
    <top>
        <HBox style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-width: 0 0 1 0; -fx-padding: 15;">
            <Label text="Enterprise Banking System" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #343a40;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Secure • Reliable • Professional" style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
        </HBox>
    </top>
    
    <!-- Main Content Area -->
    <center>
        <BorderPane fx:id="mainContainer" style="-fx-padding: 40;">
            <center>
                <VBox spacing="20" alignment="CENTER">
                    <Label text="Welcome to Enterprise Banking System" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #343a40;"/>
                    <Label text="Select an option from the sidebar to get started" style="-fx-font-size: 16px; -fx-text-fill: #6c757d;"/>
                    <Label text="🏦" style="-fx-font-size: 64px; -fx-padding: 20;"/>
                </VBox>
            </center>
        </BorderPane>
    </center>
    
    <!-- Bottom Status Bar -->
    <bottom>
        <HBox style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 1 0 0 0; -fx-padding: 10;">
            <Label text="Status: Ready" style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="© 2024 Enterprise Banking System" style="-fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
        </HBox>
    </bottom>
</BorderPane>
