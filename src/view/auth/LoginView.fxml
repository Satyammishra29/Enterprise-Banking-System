<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      spacing="20" alignment="CENTER" prefWidth="400" prefHeight="500"
      fx:controller="controller.auth.LoginController"
      style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);">
    
    <Label text="🏦" style="-fx-font-size: 48px; -fx-padding: 20 0 0 0;"/>
    <Label text="Enterprise Banking System" 
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
    <Label text="Secure Login" 
           style="-fx-font-size: 18px; -fx-text-fill: white; -fx-opacity: 0.9;"/>
    
    <VBox spacing="15" style="-fx-padding: 30; -fx-background-color: white; -fx-background-radius: 10;">
        <TextField fx:id="usernameField" promptText="Username" 
                   style="-fx-font-size: 14px; -fx-pref-height: 40;"/>
        <PasswordField fx:id="passwordField" promptText="Password" 
                       style="-fx-font-size: 14px; -fx-pref-height: 40;"/>
        <ComboBox fx:id="roleComboBox" promptText="Select Role" 
                  style="-fx-font-size: 14px; -fx-pref-height: 40;"/>
        <Button fx:id="loginButton" text="Login" 
                style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-height: 45; -fx-background-radius: 5;"/>
        <Label fx:id="errorLabel" text="" 
               style="-fx-text-fill: #dc3545; -fx-font-size: 12px;" visible="false"/>
    </VBox>
    
    <VBox spacing="5" style="-fx-padding: 20;">
        <Label text="Demo Credentials:" style="-fx-text-fill: white; -fx-font-size: 12px;"/>
        <Label text="Admin: admin/admin123" style="-fx-text-fill: white; -fx-font-size: 10px; -fx-opacity: 0.8;"/>
        <Label text="Cashier: cashier/cashier123" style="-fx-text-fill: white; -fx-font-size: 10px; -fx-opacity: 0.8;"/>
        <Label text="Auditor: auditor/auditor123" style="-fx-text-fill: white; -fx-font-size: 10px; -fx-opacity: 0.8;"/>
    </VBox>
</VBox>
